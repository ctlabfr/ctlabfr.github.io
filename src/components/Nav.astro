---
const { links } = Astro.props; // Les liens sont passés en tant que propriété
---

<nav>
  <ul>
    {
      links.map((link: { href: string | URL | null | undefined; label: string; }) => (
        <li>
          <a href={link.href}>{link.label}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    background-color: #f8f9fa;
    padding: 1rem;
  }
  ul {
    list-style: none;
    display: flex;
    gap: 1rem;
    margin: 0;
    padding: 0;
  }
  a {
    text-decoration: none;
    color: #007bff;
  }
  a:hover {
    text-decoration: underline;
  }
</style>
